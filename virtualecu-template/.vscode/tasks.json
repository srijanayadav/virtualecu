{
    "version":"2.0.0",
    
    "tasks": [
        {
            "label": "build_vecu_program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-shared"           ,
                "-fdiagnostics-color=always",
                "-g",
                "-fPIC",
                "${config:workspaceFolder}/*.c",
                "${config:workspaceFolder}/components/*.c",
                "${config:workspaceFolder}/source/*.c",
                "-I",
                "${config:workspaceFolder}/components",
                "-I",
                "${config:workspaceFolder}/source",
                "-o",
                "${config:workspaceFolder}/bin/Debug/vEcuImpl.bin"
            ],
            "options": {
                "cwd": "${config:vecu.build_tools_directory}",
                "shell": {
                    "executable": "C:\\Program Files\\Git\\bin\\bash.exe", // Path to Git Bash
                    "args": ["-c"]
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build the vECU program"
        }
    ],
}
